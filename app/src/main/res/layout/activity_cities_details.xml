<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/mainLayout">

    <TextView
        android:id="@+id/tvCityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        tools:text="City Name"/>

    <TextView
        android:id="@+id/tvTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        tools:text="Temperature: 20 ºC"/>

    <TextView
        android:id="@+id/tvWindSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        tools:text="Wind Speed: 15 km/h"/>

    <TextView
        android:id="@+id/tvHumidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        tools:text="Humidity: 60%"/>

    <TextView
        android:id="@+id/tvPrecipProbability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        tools:text="Precipitation Probability: 20%"/>

    <TextView
        android:id="@+id/tvCloudCover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        tools:text="Cloud Cover: 75%"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        tools:text="Description: Partly cloudy with a chance of rain"/>

    <TextView
        android:id="@+id/tvReportDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        tools:text="Report Date: 2024-05-17"/>

    <TextView
        android:id="@+id/tvReportTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        tools:text="Report Time: 14:30:00"/>

    <CheckBox
        android:id="@+id/cbFavorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:text="City Favorite"
        android:textColor="@android:color/white"
        tools:checked="true" />

    <!-- Botón para ir a la actividad de Datos Históricos -->
    <Button
        android:id="@+id/btnHistoricalData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Datos Históricos"/>

    <!-- Botón para guardar los datos actuales -->
    <Button
        android:id="@+id/btnSaveCurrentData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Datos Actuales"/>

    <!-- Botón para ir a la pantalla del chat -->
    <Button
        android:id="@+id/btnChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat"/>

    <!-- Botón para ir a la pantalla de comentarios -->
    <Button
        android:id="@+id/btnComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comentarios"/>

    <!-- ImageView para mostrar la imagen de la ciudad -->
    <ImageView
        android:id="@+id/ivCityImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="City Image"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginTop="16dp"/>

    <!-- RecyclerView para mostrar el reporte de los próximos cinco días -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFutureWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

</LinearLayout>
